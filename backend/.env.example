# Backend Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Database URL (Tembo)
# Format: postgres://username:password@host:port/database
# Get this from your Tembo instance dashboard
DATABASE_URL=postgres://your_user:your_password@your_host.tembo.io:5432/your_db

# Server Port
PORT=5000

# Node Environment (development or production)
NODE_ENV=development

# BallChasing API Key (stored in C++ code, but can be moved here)
BALLCHASING_API_KEY=your_ballchasing_api_key_here

# CORS Settings (optional - for production)
# CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Frontend URL (for CORS whitelist)
FRONTEND_URL=http://localhost:3000